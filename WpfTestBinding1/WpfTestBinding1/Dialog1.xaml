<Window x:Name="window" x:Class="WpfTestBinding1.Dialog1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestBinding1"
        mc:Ignorable="d"
        Title="Dialog1" Height="160" Width="300">
    <Grid>
        <CheckBox x:Name="checkBoxSelector" Content="Selector Value" HorizontalAlignment="Left" Margin="29,56,0,0" VerticalAlignment="Top" IsChecked="{Binding MySelector, Mode=TwoWay, Source={StaticResource MyDataInstance}, UpdateSourceTrigger=Explicit}" />
        <Button x:Name="button" Content="Сохранить" HorizontalAlignment="Left" Margin="129,101,0,0" VerticalAlignment="Top" Width="75" Click="button_Click" IsDefault="True"/>
        <Button x:Name="button1" Content="Отмена" HorizontalAlignment="Left" Margin="209,101,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="button1_Click"/>

    </Grid>
</Window>
